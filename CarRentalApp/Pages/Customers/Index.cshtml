@page
@model CarRentalApp.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Register New Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.RowKey</td>
                <td>@customer.PhoneNumber</td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>