@page
@model CarRentalApp.Pages.Vehicles.DeleteModel
@{
    ViewData["Title"] = "Delete Vehicle";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Are you sure you want to delete this vehicle?</h3>
<div>
    <h4>Vehicle Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@Model.Vehicle.PartitionKey</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Vehicle.Model</dd>

        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.Vehicle.RowKey</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Vehicle.PartitionKey" />
        <input type="hidden" asp-for="Vehicle.RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>