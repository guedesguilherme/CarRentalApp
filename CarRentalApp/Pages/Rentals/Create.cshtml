@page
@model CarRentalApp.Pages.Rentals.CreateModel
@{
    ViewData["Title"] = "Create New Rental";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label class="control-label">Customer</label>
                <select asp-for="Rental.PartitionKey" asp-items="Model.CustomerList" class="form-control">
                    <option value="">-- Select Customer --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Available Vehicle</label>
                <select asp-for="SelectedVehicle" asp-items="Model.VehicleList" class="form-control">
                    <option value="">-- Select Vehicle --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rental.StartDate" class="control-label"></label>
                <input asp-for="Rental.StartDate" class="form-control" type="date" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rental.EndDate" class="control-label"></label>
                <input asp-for="Rental.EndDate" class="form-control" type="date" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rental.TotalCost" class="control-label"></label>
                <input asp-for="Rental.TotalCost" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create Rental" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>